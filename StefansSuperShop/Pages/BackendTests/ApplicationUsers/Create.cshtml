@page
@model StefansSuperShop.Pages.BackendTests.ApplicationUsers.CreateModel

@{
    ViewData["Title"] = "Register User";
}

<h2>Create</h2>

<h4>Newsletter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplicationUser.Email" class="control-label"></label>
                <input asp-for="ApplicationUser.Email" class="form-control" />
                <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.PasswordHash" class="control-label"></label>
                <input asp-for="ApplicationUser.PasswordHash" class="form-control" />
                <span asp-validation-for="ApplicationUser.PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select name="role">
                    <option value="">Select a role</option>
                    <option value="Admin">Admin</option>
                    <option value="Customer">Customer</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
