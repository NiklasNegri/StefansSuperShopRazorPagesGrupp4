@page
@model StefansSuperShop.Pages.BackendTests.ApplicationUsers.RegisterNewsletterModel

@{
    ViewData["Title"] = "Register newsletter only";
}

<h2>Register newsletter only</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Model.NewEmail" class="control-label"></label>
                <input asp-for="Model.NewEmail" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Model.NewsletterActive" class="control-label"></label>
                <input asp-for="Model.NewsletterActive" class="form-control" />
                <span asp-validation-for="Model.NewsletterActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
