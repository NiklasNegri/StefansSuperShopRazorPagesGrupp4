@page
@model StefansSuperShop.Pages.Contact.IndexModel
@{
    ViewData["Title"] = "Contact Us";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>
    <h4>Form to get in touch with us at Systementor AB</h4>

    <hr />

    <form id="contact_form" class="col-md-5" method="post">
        <div class="form-group">
            <label asp-for="Model.DisplayName" class="control-label"></label>
            <input type="text" asp-for="Model.DisplayName" required class="form-control" placeholder="Name" />
            <span asp-validation-for="Model.DisplayName" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="Model.From" class="control-label"></label>
            <input type="text" asp-for="Model.From" required class="form-control" placeholder="name@example.com" />
        </div>

        <div class="form-group">
            <label asp-for="Model.Subject" class="control-label"></label>
            <input type="text" asp-for="Model.Subject" required class="form-control" placeholder="Subject" />

        </div>
        <div class="form-group">
            <label asp-for="Model.Body" class="control-label"></label>
            <textarea asp-for="Model.Body" required class="form-control" rows="4"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}