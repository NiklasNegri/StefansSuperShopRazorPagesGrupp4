@page
@model StefansSuperShop.Pages.Admin.ApplicationUsers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <h4>Users</h4>
    <hr />
    <div class="col-md-4">
        <h4>Change email</h4>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Model.Id" />
            <div class="form-group">
                <label asp-for="Model.NewEmail" class="control-label"></label>
                <input asp-for="Model.NewEmail" class="form-control" />
                <span asp-validation-for="Model.NewEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <h4>Change password</h4>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Model.Id" />
            <div class="form-group">
                <label asp-for="Model.NewPassword" class="control-label"></label>
                <input asp-for="Model.NewPassword" class="form-control" />
                <span asp-validation-for="Model.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.CurrentPassword" class="control-label"></label>
                <input asp-for="Model.CurrentPassword" class="form-control" />
                <span asp-validation-for="Model.CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <h4>Subscribe/Unsubscribe from newsletter</h4>
        <form method="post">
            <div class="form-group">
                <label asp-for="Model.NewsletterIsActive" class="control-label"></label>
                <input asp-for="Model.NewsletterIsActive" class="form-control" />
                <span asp-validation-for="Model.NewsletterIsActive" class="text-danger"></span>
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-page="./Index">Back to List</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
