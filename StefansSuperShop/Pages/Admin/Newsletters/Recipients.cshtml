@page
@model StefansSuperShop.Pages.Admin.Newsletters.RecipientsModel
@{
    ViewData["Title"] = "Recipients";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>
    <h4>All recipients</h4>
    <hr />
    <div>
        <a class="btn btn-primary" asp-page="./Index">Back to List</a>
    </div>
   
    <hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Recipients[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipients[0].Email)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Recipients)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
            </tr>
        }
    </tbody>
    </table>
</div>