@page
@model StefansSuperShop.Pages.Admin.Newsletters.CreateModel

@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>

    <h4>Newsletter</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Newsletter.Title" class="control-label"></label>
                    <input asp-for="Newsletter.Title" class="form-control" />
                    <span asp-validation-for="Newsletter.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Newsletter.Content" class="control-label"></label>
                    <input asp-for="Newsletter.Content" class="form-control" />
                    <span asp-validation-for="Newsletter.Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
