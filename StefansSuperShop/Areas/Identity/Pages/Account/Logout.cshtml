@page
@model LogoutModel
@{
    ViewData["Title"] = "Log Out";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>
    <hr />

    @{
        if (User.Identity.IsAuthenticated)
        {
            <h4>You are about to log out. Are you sure?</h4>
            <hr />
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-primary">Log out now</button>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application. You are welcome back anytime ;).</p>
        }
    }
</div>